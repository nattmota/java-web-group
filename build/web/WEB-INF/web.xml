<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>CadastroController</servlet-name>
        <servlet-class>controller.CadastroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LivroController</servlet-name>
        <servlet-class>controller.LivroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoCategoriasController</servlet-name>
        <servlet-class>controller.ProdutoCategoriasController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutosController</servlet-name>
        <servlet-class>controller.ProdutosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroProdutoController</servlet-name>
        <servlet-class>controller.CadastroProdutoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PapelariaController</servlet-name>
        <servlet-class>controller.PapelariaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BibliasController</servlet-name>
        <servlet-class>controller.BibliasController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrinquedosController</servlet-name>
        <servlet-class>controller.BrinquedosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarrinhoController</servlet-name>
        <servlet-class>controller.CarrinhoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroController</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroController</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/logar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LivroController</servlet-name>
        <url-pattern>/lista-livros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoCategoriasController</servlet-name>
        <url-pattern>/produtos-categorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutosController</servlet-name>
        <url-pattern>/produtos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroProdutoController</servlet-name>
        <url-pattern>/cadastro-produto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PapelariaController</servlet-name>
        <url-pattern>/papelaria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BibliasController</servlet-name>
        <url-pattern>/biblias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BrinquedosController</servlet-name>
        <url-pattern>/brinquedos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarrinhoController</servlet-name>
        <url-pattern>/carrinho</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
